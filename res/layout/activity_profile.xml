<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.needsreal.social">
    
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_strip"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal"
        android:background="#849524"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="#fff"
        app:pstsDividerColor="@color/common_signin_btn_dark_text_default"
        app:pstsDividerPadding="30dp"
        app:pstsShouldExpand="true"
        app:pstsUnderlineColor="@color/common_signin_btn_default_background" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        
    </android.support.v4.view.ViewPager>

</LinearLayout>